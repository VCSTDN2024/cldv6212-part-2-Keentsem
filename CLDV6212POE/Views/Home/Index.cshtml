@{
    ViewData["Title"] = "ABC Retail - Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <!-- Hero Section -->
        <div class="hero-section text-center">
            <h1 class="hero-title">
                <i class="fas fa-code"></i> ABC Retail
            </h1>
            <p class="hero-subtitle">
                Professional Web Application Development
            </p>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Main Navigation Buttons -->
            <div class="row justify-content-center mb-4">
                <div class="col-md-10">
                    <a href="@Url.Action("About", "Home")" class="btn btn-primary-custom btn-custom">
                        <i class="fas fa-info-circle"></i> About Us
                    </a>
                    <a href="@Url.Action("Customers", "TableStorage")" class="btn btn-secondary-custom btn-custom">
                        <i class="fas fa-users"></i> Customers
                    </a>
                    <a href="@Url.Action("Products", "TableStorage")" class="btn btn-success-custom btn-custom">
                        <i class="fas fa-box"></i> Products
                    </a>
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-info-custom btn-custom">
                        <i class="fas fa-envelope"></i> Contact
                    </a>
                </div>
            </div>

            <!-- ABC Retail Services -->
            <div class="row justify-content-center mb-4">
                <div class="col-md-10">
                    <a href="@Url.Action("BlobStorage", "Storage")" class="btn btn-warning btn-custom">
                        <i class="fas fa-images"></i> Product Gallery
                    </a>
                    <a href="@Url.Action("FileShare", "Storage")" class="btn btn-danger btn-custom">
                        <i class="fas fa-file-contract"></i> Contracts & Documents
                    </a>
                    <a href="@Url.Action("Queue", "Storage")" class="btn btn-success btn-custom">
                        <i class="fas fa-bell"></i> Order Notifications
                    </a>
                    <a href="@Url.Action("Index", "AzureFunctions")" class="btn btn-info btn-custom">
                        <i class="fas fa-cloud"></i> Order Processing
                    </a>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form method="post" style="display: inline;">
                        <button type="submit" formaction="@Url.Action("Download", "Home")" class="btn btn-warning btn-custom">
                            <i class="fas fa-download"></i> Download Resources
                        </button>
                    </form>

                    <button type="button" class="btn btn-light btn-custom" onclick="showInfo()">
                        <i class="fas fa-question-circle"></i> System Info
                    </button>

                    <button type="button" class="btn btn-dark btn-custom" onclick="toggleTheme()">
                        <i class="fas fa-palette"></i> Toggle Theme
                    </button>
                </div>
            </div>

            <!-- Stats Row -->
            <div class="row stats-row">
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">100%</div>
                        <div>Responsive</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">24/7</div>
                        <div>Support</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">50+</div>
                        <div>Projects</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">5â˜…</div>
                        <div>Rating</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Grid -->
        <div class="container">
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <h3 class="feature-title">Fast Performance</h3>
                    <p class="feature-description">
                        Optimized for speed and efficiency with modern web technologies.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="feature-title">Secure & Reliable</h3>
                    <p class="feature-description">
                        Built with security best practices and reliable architecture.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h3 class="feature-title">Mobile Responsive</h3>
                    <p class="feature-description">
                        Fully responsive design that works on all devices and screen sizes.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="feature-title">User Friendly</h3>
                    <p class="feature-description">
                        Intuitive interface designed with user experience in mind.
                    </p>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-5 pb-3">
            <p style="color: rgba(255, 255, 255, 0.7);">
                <i class="fas fa-clock"></i> Current Time: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") |
                <i class="fas fa-server"></i> Server Status: Online |
                <a href="@Url.Action("Privacy", "Home")" style="color: #ffd700;">Privacy Policy</a>
            </p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function showInfo() {
            alert(`ðŸš€ ABC Retail Application Info\n\n` +
                  `â€¢ Framework: ASP.NET Core\n` +
                  `â€¢ Status: Running Successfully\n` +
                  `â€¢ Current Time: ${new Date().toLocaleString()}\n` +
                  `â€¢ Browser: ${navigator.userAgent.split(')')[0]})}`);
        }

        function toggleTheme() {
            const body = document.body;
            if (body.style.background.includes('667eea')) {
                body.style.background = 'linear-gradient(135deg, #2c3e50 0%, #34495e 100%)';
            } else {
                body.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
            }
        }

        // Add smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Add button click effects
        document.querySelectorAll('.btn-custom').forEach(button => {
            button.addEventListener('click', function(e) {
                let ripple = document.createElement('span');
                ripple.classList.add('ripple');
                this.appendChild(ripple);

                let x = e.clientX - e.target.offsetLeft;
                let y = e.clientY - e.target.offsetTop;

                ripple.style.left = x + 'px';
                ripple.style.top = y + 'px';

                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });
    </script>
</body>
</html>